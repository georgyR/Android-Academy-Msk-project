<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_cardview_side"
    android:layout_marginTop="@dimen/margin_cardview"
    android:layout_marginEnd="@dimen/margin_cardview_side"
    android:layout_marginBottom="@dimen/margin_cardview"
    app:cardCornerRadius="@dimen/margin_cardview"
    app:cardElevation="@dimen/elevation_cardview"
    app:contentPadding="@dimen/padding_common">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_news__textview_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/item_news__imageview_news"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Darwin Awards" />

        <TextView
            android:id="@+id/item_news__textview_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_big"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/item_news__imageview_news"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_news__textview_category"
            tools:text="Tourist filmed sitting on 5m-long crocodile" />

        <TextView
            android:id="@+id/item_news__textview_preview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/item_news__imageview_news"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_news__textview_title"
            tools:text="It was dangerous, I know. It is a scary feeling sitting on something that could kill you in a fraction of a second, he sas." />

        <TextView
            android:id="@+id/item_news__textview_publish_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:maxLines="1"
            android:textSize="@dimen/textsize_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_news__imageview_news"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_news__textview_preview"
            tools:text="4 hr. ago, 10:34 AM" />

        <ImageView
            android:id="@+id/item_news__imageview_news"
            android:layout_width="@dimen/imagesize_common"
            android:layout_height="@dimen/imagesize_common"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>