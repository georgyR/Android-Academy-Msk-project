<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@animator/shadow_appbarlayout">

        <include layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_common"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edittext_news_editor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_common"
                android:layout_marginEnd="@dimen/margin_common"
                android:layout_marginBottom="@dimen/margin_common"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_huge"
                android:textStyle="bold"
                tools:text="U.S. Law Enforcement Failed to See the Threat of White Nationalism. Now They Don’t Know How to Stop It." />

            <ImageView
                android:id="@+id/imageview_news_editor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_image_common"
                android:layout_marginBottom="@dimen/margin_common"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <EditText
                android:id="@+id/edittext_news_editor_abstract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_common"
                android:layout_marginEnd="@dimen/margin_common"
                android:layout_marginBottom="@dimen/margin_common"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_common"
                tools:text="U.S. Law Enforcement Failed to See the Threat of White Nationalism. Now They Don’t Know How to Stop It." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/textview_news_editor_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_common"
                    android:layout_marginEnd="@dimen/margin_common"
                    android:textAllCaps="false"
                    tools:text="06:34 AM" />

                <Button
                    android:id="@+id/textview_news_editor_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    tools:text="Nov. 4, 2018" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>