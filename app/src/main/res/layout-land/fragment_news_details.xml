<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@animator/shadow_appbarlayout">

        <include layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_newsdetails_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_screen_side"
                android:layout_marginEnd="@dimen/margin_screen_side"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_huge"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/barrier"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageview_newsdetails"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="U.S. Law Enforcement Failed to See the Threat of White Nationalism. Now They Don’t Know How to Stop It. " />

            <ImageView
                android:id="@+id/imageview_newsdetails"
                android:layout_width="@dimen/imagewidth_news"
                android:layout_height="@dimen/imageheight_news"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/barrier"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textview_newsdetails_abstract"
                style="@style/ViewWithSideMargin"
                android:layout_marginStart="@dimen/margin_cardview_side"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_cardview_side"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/barrier"
                tools:text="U.S. Law Enforcement Failed to See the Threat of White Nationalism. Now They Don’t Know How to Stop It." />

            <TextView
                android:id="@+id/textview_newsdetails_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_cardview_side"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_newsdetails_abstract"
                tools:text="06:34 AM" />

            <TextView
                android:id="@+id/textview_newsdetails_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_common"
                android:textColor="@android:color/black"
                app:layout_constraintBaseline_toBaselineOf="@+id/textview_newsdetails_time"
                app:layout_constraintStart_toEndOf="@+id/textview_newsdetails_time"
                tools:text="Nov. 4, 2018" />

            <android.support.constraint.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="textview_newsdetails_title,imageview_newsdetails"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

